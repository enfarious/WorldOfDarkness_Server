{
  "name": "ashes-and-aether-server",
  "version": "0.1.0",
  "description": "MMO server for Ashes & Aether - tactical supernatural combat and wildlife simulation",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:gateway": "tsx watch src/gateway-main.ts",
    "dev:zone": "tsx watch src/zoneserver-main.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "start:gateway": "node dist/gateway-main.js",
    "start:zone": "node dist/zoneserver-main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma db push --force-reset && npm run prisma:seed"
  },
  "keywords": [
    "mmo",
    "game-server",
    "websocket",
    "tactical-rpg"
  ],
  "author": "",
  "license": "AGPL-3.0",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@prisma/client": "5.22.0",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express-session": "^1.18.2",
    "@types/passport": "^1.0.17",
    "@types/passport-openidconnect": "^0.1.3",
    "bcrypt": "^5.1.1",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^6.16.0",
    "passport": "^0.7.0",
    "passport-openidconnect": "^0.1.2",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "redis": "^5.10.0",
    "socket.io": "^4.8.1",
    "uuid": "^11.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prisma": "5.22.0",
    "socket.io-client": "^4.8.3",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
