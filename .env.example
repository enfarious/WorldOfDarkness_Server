# Server Configuration
NODE_ENV=development
PORT=3000
WS_PORT=3001

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/world_of_darkness?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Airlock (LLM control)
AIRLOCK_SHARED_SECRET=this-should-be-changed-in-production
AIRLOCK_SESSION_TTL_MS=43200000
AIRLOCK_MAX_CONCURRENT=5
AIRLOCK_INHABIT_TTL_MS=300000
AIRLOCK_INHABIT_MAX_TTL_MS=1800000

# LLM Configuration for NPC AI
# Auto-detects provider: If ANTHROPIC_API_KEY set, uses Claude. Otherwise uses OpenAI-compatible API.

# Anthropic Claude (optional, high quality, costs money)
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI-Compatible API (LMStudio, Ollama, OpenAI, etc.)
# Defaults to LMStudio local server if not set
OPENAI_BASE_URL=http://127.0.0.1:1234/v1
OPENAI_API_KEY=not-needed
OPENAI_MODEL=local-model

# Examples for other providers:
# LMStudio:     OPENAI_BASE_URL=http://127.0.0.1:1234/v1
# Ollama:       OPENAI_BASE_URL=http://127.0.0.1:11434/v1
# OpenAI:       OPENAI_BASE_URL=https://api.openai.com/v1  OPENAI_API_KEY=sk-...
# LocalAI:      OPENAI_BASE_URL=http://localhost:8080/v1
# Any other OpenAI-compatible endpoint works!

# Game Configuration
TICK_RATE=20
COMBAT_TICK_RATE=20
WILDLIFE_TICK_RATE=2

# Distributed Server Configuration
SERVER_ID="server-1"
GATEWAY_PORT=3100

# Zone Assignment (comma-separated zone IDs, leave empty for all zones)
# Examples:
#   ASSIGNED_ZONES=""                                  # All zones (single-server mode)
#   ASSIGNED_ZONES="zone-crossroads,zone-forest"      # Specific zones
ASSIGNED_ZONES=""

# Logging
LOG_LEVEL=info
