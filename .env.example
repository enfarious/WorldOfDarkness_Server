# Server Configuration
NODE_ENV=development
PORT=3000
WS_PORT=3001

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/world_of_darkness?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# LLM Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
LLM_PROVIDER=anthropic

# Game Configuration
TICK_RATE=20
COMBAT_TICK_RATE=20
WILDLIFE_TICK_RATE=2

# Distributed Server Configuration
SERVER_ID="server-1"
GATEWAY_PORT=3100

# Zone Assignment (comma-separated zone IDs, leave empty for all zones)
# Examples:
#   ASSIGNED_ZONES=""                                  # All zones (single-server mode)
#   ASSIGNED_ZONES="zone-crossroads,zone-forest"      # Specific zones
ASSIGNED_ZONES=""

# Logging
LOG_LEVEL=info
